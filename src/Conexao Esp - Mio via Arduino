const int pinoEntradaLuzLoja = 4; 
const int pinoEntradaArLoja = 3;
const int pinoSaidaLuzLoja = 8;
const int pinoSaidaArLoja = 9;
const int pinoSaidaArLojaDesligar = 10;


void setup() {
  pinMode(pinoEntradaLuzLoja, INPUT);
  pinMode(pinoEntradaArLoja, INPUT);
  pinMode(pinoSaidaLuzLoja, OUTPUT);
  pinMode(pinoSaidaArLojaDesligar, OUTPUT);
  pinMode(pinoSaidaArLoja, OUTPUT);

  Serial.begin(9600);
  Serial.println("Programa iniciado. Monitorando Porta 4.");
}

void loop() {
  int estadoEntradaLuzLoja = digitalRead(pinoEntradaLuzLoja);
  int estadoEntradaArLoja = digitalRead(pinoEntradaArLoja);

  if (estadoEntradaLuzLoja == HIGH) {
    digitalWrite(pinoSaidaLuzLoja, HIGH);
    Serial.println("Entrada (Pino 4): HIGH -> Saída (Pino 8): HIGH");
  } else {
    digitalWrite(pinoSaidaLuzLoja, LOW);
    Serial.println("Entrada (Pino 4): LOW -> Saída (Pino 8): LOW");
  }

  if (estadoEntradaArLoja == HIGH) {
    digitalWrite(pinoSaidaArLoja, HIGH);
    digitalWrite(pinoSaidaArLojaDesligar, LOW);
    Serial.println("Entrada (Pino 5): HIGH -> Saída (Pino 9): HIGH");
  } else {
    digitalWrite(pinoSaidaArLojaDesligar, HIGH);
    digitalWrite(pinoSaidaArLoja, LOW);
    Serial.println("Entrada (Pino 5): LOW -> Saída (Pino 9): LOW");
  }

  delay(2000);
}
