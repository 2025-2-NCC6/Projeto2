const int pinoEntrada = 4; 
const int pinoSaida = 8;

void setup() {
  pinMode(pinoEntrada, INPUT);
  pinMode(pinoSaida, OUTPUT);

  Serial.begin(9600);
  Serial.println("Programa iniciado. Monitorando Porta 4.");
}

void loop() {
  int estadoEntrada = digitalRead(pinoEntrada);

  if (estadoEntrada == HIGH) {
    digitalWrite(pinoSaida, HIGH);
    Serial.println("Entrada (Pino 4): HIGH -> Saída (Pino 8): HIGH");
  } else {
    digitalWrite(pinoSaida, LOW);
    Serial.println("Entrada (Pino 4): LOW -> Saída (Pino 8): LOW");
  }

  delay(10);
}
